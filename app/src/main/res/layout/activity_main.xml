<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/documentsRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/scrollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scrollButtonText"
        app:layout_constraintBottom_toBottomOf="@+id/documentsRecycler"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/getPositionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/getPositionButtonText"
        app:layout_constraintBottom_toBottomOf="@+id/documentsRecycler"
        app:layout_constraintEnd_toEndOf="@+id/documentsRecycler" />

    <ImageView
        android:id="@+id/segmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/segmentViewDescription" />

    <SeekBar
        android:id="@+id/segmentHeightSeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/scrollButton"
        app:layout_constraintEnd_toEndOf="@+id/documentsRecycler"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/outlineContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:tag="outlineContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>